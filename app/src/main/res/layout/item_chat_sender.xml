<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/chat_sender"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/standard_quarter"
    android:paddingEnd="@dimen/standard_half"
    android:paddingStart="60dp"
    android:clipToPadding="false"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/txtSenderDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginEnd="@dimen/standard_half"
        android:layout_marginStart="@dimen/standard_half"
        android:layout_gravity="bottom"
        tools:text="@tools:sample/date/hhmm"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_sender_bubble">

        <TextView
            android:id="@+id/txtSenderMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:elevation="2dp"
            android:maxWidth="300dp"
            tools:text="@tools:sample/lorem/random"
            tools:maxLines="2"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>